{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "NordBund-analytics",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "Copyright © 2025 (Oscar Quintana)",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.nordbund.analytics-app",
      "longDescription": "Una aplicación de escritorio para analizar datos de siniestros y visualizar métricas clave.",
      "macOS": {},
      "resources": [],
      "shortDescription": "Herramienta de análisis de datos de NordBund.",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis": {
          "headerImage": "resources/header.bmp",
          "sidebarImage": "resources/sidebar.bmp",
          "installerIcon": "icons/icon.ico",
          "installMode": "currentUser",
          "languages": [
            "German",
            "English",
            "Spanish"
          ],
          "template": "./installer.nsi"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "NordBund-analytics",
        "width": 1280,
        "visible": false,
        "center": true
      },
      {
        "label": "splashscreen",
        "width": 400,
        "height": 300,
        "decorations": false,
        "url": "splashscreen.html",
        "center": true,
        "alwaysOnTop": true,
        "transparent": true
      }
    ]
  }
}